<div class="row">
	<div class="col-xs-12">
		<h2 class="admin's_order-indetail-view">注文履歴一覧</h2>
		   <table class="table table-hover table-bordered table-condensed">
				<tbody>
					<%=@orders.each do |order| %>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
					<tr>
						<th><%= order.created_at.strftime('%Y/%m/%d') %></th>
						<th><%= order.customer.full_name %></th><%#= customer.name %>
						<th><%= order.order_details.number %></th>
						<th><%= order.status %></th>
					</tr>
					<% end %>
				</tbody>
		   </table>
	</div>
</div>