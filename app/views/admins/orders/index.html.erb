<div class="row">
		<h2 class="admins_order-indetail-view">注文履歴一覧</h2>
		   <table class="table table-hover table-bordered table-condensed">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
						<tr>
							<td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
							<td><%= order.customer.full_name %></th>
							<td><%= order.order_details.pluck(:number).sum %></td>
							<td><%= order.status %></td>
							<td><%= link_to "詳細", admins_order_path(order) %></td>
						</tr>
					<% end %>
				</tbody>
		   </table>
</div>
