<div class="row">
	<div class="col-md-8 col-md-offset-2">
	<h3>ジャンル一覧・追加</h3>

	<div class="genre_index_content">
		<%= form_for(@genre, url:admins_genres_path(@genre), method: :post) do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効" %>
		<%= f.radio_button :is_active, 1, :checked => true %>
		<%= f.label :is_active, "無効" %>
		<%= f.radio_button :is_active, 0 %>
		<%= f.submit "追加", class: "btn btn-primary" %>
		<% end %>
	</div>

	<div class="genre_table">
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @genres.each_with_index do |genre, i| %>
				<tr>
					<td><%= genre.name %></td>
					<td><% if genre.is_active? %>
							<p>有効</p>
						<% else %>
							<p>無効</p>
						<% end %>
					</td>
					<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @genres %>
	</div>
</div>
</div>


