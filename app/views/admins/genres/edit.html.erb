<div class="row">
<div class="genre_create_content">
	<%= form_for(@genre, url: admins_genre_path) do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効", :value => 0 %>
		<%= f.radio_button :is_active, "true", :checked => true %>
		<%= f.label :is_active, "無効", :value => 1 %>
		<%= f.radio_button :is_active, "false" %>
		<%= f.submit "追加", class: "btn btn-primary" %>
	<% end %>
</div>
</div>