<div class="row">

<h2 class="mypage"></i>会員一覧</h3>

	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>

		<tbody>
			<% @customers.each do|customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to customer.full_name, admins_customer_path(customer) %></td>
					<td><%= customer.email %></td>
					<td><% if customer.is_deleted? %>
							<p>退会済み</p>
						<% else %>
							<p>有効</p>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>

	</table>
</div>