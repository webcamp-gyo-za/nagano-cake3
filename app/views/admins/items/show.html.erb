<div class="row">
  <h1 class="item-title">商品詳細</h1>
  <div class="col-xs-4">
    <div class="admins-item-img">
      <%= attachment_image_tag @item, :image, size: "200x200", fallback: "no_image.jpg" %>
    </div>
  </div>
  <div class="col-xs-8">
    <table class="item-table">
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th>税込価格(税抜価格)</th>
        <td><%= price_include_tax(@item.price) %> (<%= @item.price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <% if @item.is_active? %>
          販売中
          <% else %>
          販売不可
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="item_btn">
    <%= link_to '編集', edit_admins_item_path(@item) ,class: "btn btn--orange btn--cubic btn--shadow" %>
  </div>
</div>