<div class="row">
  <h2>商品詳細</h2>

  <div class="col-xs-4">
    <div class="item-img">
      <%= attachment_image_tag @item, :image, size: "200x200", fallback: "no_image.jpg" %>
    </div>
  </div>

  <div class="col-xs-8">
    <div class="item-detail">
      <div class="admins-itemdetail-title">商品名</div>
      <div class="admins-item-detail-content"><%= @item.name %></div>
    </div>

    <div style="display: flex;">
      <h4 style="margin: 0 30px 30px 0;">商品説明</h4>
      <div style="overflow-wrap: break-word;　word-wrap: break-word; width: 300px;">
        <%= @item.introduction %>
      </div>
    </div>

    <h4 style="margin:0 30px 30px 0;">ジャンル
      <%= @item.genre.name %>
    </h4>

    <h4 style="margin: 0 30px 30px 0;">税込価格(税抜価格)
      <%= price_include_tax(@item.price) %>(<%= @item.price %>)円
    </h4>

    <h4 style="margin: 0 30px 30px 0;">販売ステータス
      <% if @item.is_active? %>
        販売中
      <% else %>
        販売不可
      <% end %>
    </h4>

    <%= link_to '編集', edit_admins_item_path(@item) ,class: "btn btn-primary " %>
  </div>
</div>
</div>