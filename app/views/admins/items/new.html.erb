<div class="row">

<h3>商品新規登録</h3>

	<div class="item_newform">
		<%= form_for(@item) do |f| %>

			<div class="col-xs-4">
				<div class="item_leftfield">
					<%= f.attachment_field(item, :image, :fill, 100, 100, fallback: "no image") %>
				</div>
			</div>

			<div class="col-xs-4">

				<p class="item_centerfield">
					<%= f.label :商品名 %>
					<%= f.text_field :name %>
				</p>
				<p class="item_centerfield">
					<%= f.label :商品説明 %>
					<%= f.text_area :introduction %>
				</p>
				<p class="item_centerfield">
					<%= f.label :ジャンル %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
				</p>
				<p class="item_centerfield">
					<%= f.label :税価格 %>
					<%= f.text_field :price %>
				</p>
				<p class="item_centerfield">
					<%= f.label :販売ステータス %>
					<%= f.select :is_active,[["販売中", true], ["販売停止", false]], include_blank: "選択してください" %>
				</p>
			</div>
			<div class="col-xs-4">
				<p class="item_createbtn">
    				<%= f.submit "新規登録", class: "btn btn-primary" %>
				</p>
			</div>
		<% end %>
	</div>

</div>
</div>