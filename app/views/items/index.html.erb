<div class="row">
  <div class="col-xs-2">
    <%=render 'admins/genres/genre_search', genres: @genres %>
  </div>


  <div class="col-xs-10">
    <h2>商品一覧(全<%= @items.count %>件)</h2>


    <div class="flex-item">
      <% @items.each do |item| %>
      <%= attachment_image_tag item, :image, size: "150x100", fallback: "no_image.jpg"%><br>
      <%= link_to item.name, item_path(item)%><br>
      ￥<%= price_include_tax(item.price) %><br>
      <% end %>
    </div>

    <%= paginate @items %>

  </div>
</div>

