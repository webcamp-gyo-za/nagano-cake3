<div class="row">
  <div class="col-xs-2">
    <%=render 'admins/genres/genre_search', genres: @genres %>
  </div>


  <div class="col-xs-10">
    <h2>商品一覧(全<%= @items.count %>件)</h2>

    <div class="flex-item">
      <% @items.each do |item| %>
        <div class="flex-item-content">
          <%= attachment_image_tag item, :image, size: "200x150", fallback: "no_image.jpg"%>
          <div class="index-item-name"><%= link_to item.name, item_path(item)%></div>
          ￥<%= price_include_tax(item.price) %>
        </div>
      <% end %>
    </div>

    <%= paginate @items %>

  </div>
</div>

