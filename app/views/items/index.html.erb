<div class="row">
	<div class="col-xs-2">検索機能genre</div>
		<%= link_to 'ケーキ', items_path%>

	<div class="col-xs-10">
		<h2>商品一覧(全<%= @items.count %>件)</h2>
		<h2><%= @genre.name %>一覧(全<%= @items.count %>件)</h2>
		<div  class="flex-item">
			<% @items.each do |item| %>
				<%= attachment_image_tag(item, :item_image, :full, 50, 50, fallback: "no image") %><br>
				<%= item.name%>
				<%= item.price %>
			<% end %>
		</div>
		<%= paginate @items %>
	</div>
</div>
