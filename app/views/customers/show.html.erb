<div class="row">
  <h1 class="mypage"><i class="fas fa-user"></i>マイページ</h1>
  <div class="mypage-info text-center">
    <p class="under_mypage">
      <strong class="text-left">登録情報</strong>
      <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-primary mypage_edit text-right" %>
      <%= link_to "パスワードを変更する", edit_customer_registration_path, class:"btn btn-primary text-right" %>
    </p>
  </div>
  <div class="mypage-center">
    <table class="table-content row table table-bordered">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_kana %><%= @customer.first_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.post_number %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <ul class="mypage-btn">
      <li class="mypage-bottom">
        <span>配送先</span>
        <%= link_to "一覧を見る", deliveries_path, class:"btn btn-primary" %>
      </li>
      <li class="mypage-bottom order-content">
        <span>注文履歴</span>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
      </li>
    </ul>
  </div>
</div>