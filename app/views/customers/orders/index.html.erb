<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="order-histry-view">注文履歴一覧</h2>
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </thead>
        <tbody class="order-tbody">
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>〒<%= order.post_number %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td><%= order.order_price.to_s(:delimited) %>円</td>
            <td><%= order.status %></td>
            <td><%=link_to "表示画面",order_path(order.id), class: "btn btn-primary button" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>