<div class="container registrations">
  <div class="row">
    <div class="col-md-12 form-container text-center">
      <h2>ログイン</h2>
      <div class="form-content">
        <div class="row text-center">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-success" %>
          </div>
          <% end %>

          <%= link_to new_customer_registration_path do %>
          <span class="glyphicon glyphicon-chevron-left">新規登録はこちら</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>