<div class="row">
  <h2 class="mypage"><i class="fas fa-user"></i>登録情報編集</h2>
  <%= form_for(@customer, url:customer_path(@customer), method: :patch) do |f| %>
  <div class="form-group">
    <label>姓</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", style: "margin;"  %>
    <label>名</label>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="form-group">
    <label>セイ</label>
    <%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana" %>
    <label>メイ</label>
    <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
  </div>

  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
  </div>

  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="form-group">
    <label>電話番号</label>
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <hr>
  <div style="text-align:center;">
    <%= f.submit "変更を保存する", class:"btn btn-success", style: "display:inline-block" %>
    <div class="row">
      <div class="btn-content">
        <%= link_to customer_path(@customer) do %>
        <span class="glyphicon glyphicon-chevron-left">マイページ</span>
        <% end %>
      </div>
      <div class="btn-content">
        <%= link_to "退会する", withdrawal_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>
</div>