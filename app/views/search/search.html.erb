<div class="row">
  <div class="col-xs-2">
    <%=render 'admins/genres/genre_search', genres: @genres %>
  </div>


  <div class="col-xs-10">
    <h2><%= @genre.name %>一覧(全<%= @genre_items.count %>件)</h2>

    <div class="flex-item">
      <% @genre_items.each do |item| %>
      <div class="flex-item-content">
        <%= attachment_image_tag item, :image, size: "200x150", fallback: "no_image.jpg"%>
        <div class="genres-item-name"><%= link_to item.name, item_path(item)%></div>
        ¥<%= item.price.to_s(:delimited) %><br>
      </div>
      <% end %>
      <%= paginate @genre_items %>
    </div>
  </div>
</div>