<p>ショッピングカート</p>
 <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger' %>


<table>
	<thead>
		<tr>
			<td>商品名</td>
			<td>単価（税込）</td>
			<td>数量</td>
			<td>小計</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% sum_all = 0 %>
		<tr>
		<% @cart_items.each do |cart_item| %>
			<td>
				<%= link_to item_path(cart_item.item) do%>
				<%= attachment_image_tag(cart_item.item, :image, :fill, 100, 100, fallback: "no_img.jpg") %>
				<%= cart_item.item.name %>
				<% end %>
			</td>
			<td>
				<%= price_include_tax(cart_item.item.price) %>
			</td>
			<td>
				<%= form_with model: cart_item, local: true do |f| %>
        		<%= f.number_field :amount, value: cart_item.amount, min:1, max:99  %>
        		<%= f.submit "変更", class: "btn btn-primary" %>
        		<% end %>
        	</td>
        	<td>
        		<%= sum_item = price_include_tax(cart_item.item.price).to_i * cart_item.amount %>円
        		<% sum_all += sum_item %>
        	</td>
        	<td>
        		<%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger"%>
        	</td>
        <% end %>
		</tr>
	</tbody>
</table>

	<%= link_to "買い物を続ける", root_path, class: "btn btn-primary "%>
	 <p>合計金額：<%= sum_all %>円</p>
	 <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-lg" %>