<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2 class="order-indetail-view">注文履歴詳細</h2>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-7">
			<h3 class="table-title">注文情報</h3>
			 <table class="table table-hover table-inverse table-bordered">
				<tbody>
					<tr>
						<th>注文日</th>
						<th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
					</tr>
					<tr>
						<th>配送先</th>
						<th><%= @order.post_number %><br>
                	        <%= @order.address %><br>
                	        <%= @order.name %>
                	    </th>
					</tr>
					<tr>
						<th>支払方法</th>
						<th><%= @order.payment_method%></th>
					</tr>
					<tr>
						<th>ステータス</th>
						<th><%= @order.status%></th>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3">
			<h3 class="table-title">請求情報</h3>
			 <table class="table table-hover table-inverse table-bordered">
				<tbody>
					<tr>
						<th>商品合計</th>
						<th><%= @order.order_price - 800 %>
							<%#= @order.order_price * 1.08 - 800 %>
							<%#= @item_all_price.to_s(:delimited) %>円<%#= @order_price %></th>
					</tr>
					<tr>
						<th>配送料</th>
						<th>800円<%#= @order.shipping_cost %></th>
					</tr>
					<tr>
						<th>ご請求額</th>
						<th><%= @order.order_price.to_s(:delimited) %>円<%#= @shipping_cost.order_price %></th>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-2"></div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h3 class="table-title">注文内容</h3>
			<table class="table table-hover table-inverse table-bordered">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価(税込)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_details.each do |order_detail| %>
					<tr>
						<th><%= order_detail.item.name %></th>
						<th><%#= order_detail.item.price.to_s(:delimited) %>
						<%= price_include_tax(order_detail.item.price) %>円</th>
						<%#= order.order_price %>
						<th><%= order_detail.number %></th>
						<th><%= order_detail.subtotal.to_s(:delimited) %>円</th><%#= item.price %>
					</tr>
					<% end %>
				</tbody>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>
