<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2 class="order-confirm-view">注文情報確認</h2>
			<table class="table table-hover table-inverse table-bordered">
				<thead>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</thead>
				<tbody>
					<%=@cart_items.each do |cart_item| %>
					<td><%=attachment_image_tag cart_item.item, :image, size: "25x25", fallback: "no_image.jpg"%>
						<%= cart_item.item.name %>,
					</td>
					<td><%=cart_item.item.price.to_s(:delimited) %>円</td><%#= 要確認 %>
					<td><%=cart_item.amount %></td>
					<td><%=cart_item.subtotal.to_s(:delimited) %>円</td>-----
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-xs-3">
			<table class="table table-hover table-inverse table-bordered">
				<tbody>
					<tr>
						<th>送料</th>
						<th>800</th>
					</tr>
					<tr>
						<th>商品合計</th>
						<th><%= @item_all_price %></th><%#= @item.price 足し算 後で確認 %>
					</tr>
					<tr>
						<th>請求料金</th>
						<th><%= @order.order_price %></th><%#= 後で確認 %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h4>支払方法<%= @order.payment_method %></h4>
			<h4>お届け先<%= "#{@order.post_number} #{@order.address} #{@order.name}" %></h4>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<%=form_for(@order) do |f| %>
			<%=f.submit "購入を確定する" %>
			<% end %>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>






